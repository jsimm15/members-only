<%= render "signedin", user: @user, post: @post %>


<h1>All Posts</h1>

<ul> 
<% @posts.each do |post| %>
  <li>
    <strong>Title:</strong> <%= post.title %> <br>
    <strong>Content:</strong> <%= post.body %>
    <% if user_signed_in? %>
      <br>
      <strong>Author:</strong> <%= post.author%>
    <% end %>
  </li> 
  <br>
<% end %>
</ul>
<%= render "signedin", user: @user, post: @post %>

<h1>User Profile</h1>

<div>
  <p>
    Username: <%= @user.username %>
  </p>
  <p>
    First Name: <%= @user.firstname %>
  </p>
  <p>
    Last Name: <%= @user.lastname %>
  </p>
  <p>
    Email: <%= @user.email %>
  </p>


<% if user_signed_in? %>
  <h2>Posts</h2>
  <% @user.posts.each do |post| %>
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>
    <p>
      <strong>Content:</strong>
      <%= post.body %>
    </p>
    <p>
      <strong>Author:</strong>
      <%= post.author %>
    </p>
  <% end %>

<%= render "postform", user: @user, post: @post %>

<% end %>

  <div>
    <p>
      <%= link_to "Edit", edit_user_path(@user) %>
    </p>
    <p>
      <%= link_to "Back", users_path %>
    </p>
  </div>
  
</div>
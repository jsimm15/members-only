<h1>User Profile</h1>

<div>
  <p>
    Username: <%= @user.username %>
  </p>
  <p>
    First Name: <%= @user.firstname %>
  </p>
  <p>
    Last Name: <%= @user.lastname %>
  </p>
  <p>
    Email: <%= @user.email %>
  </p>

  
  <div>
    <p>
      <%= link_to "Edit", edit_user_path(@user) %>
    </p>
    <p>
      <%= link_to "Back", users_path %>
    </p>
  </div>
  
</div>